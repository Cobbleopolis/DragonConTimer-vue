{
  "name": "dragoncon-timer",
  "displayName": "DragonCon Timer",
  "version": "1.1.0-SNAPSHOT",
  "description": "Timing application for DragonCon LAN Gaming",
  "main": "index.js",
  "author": "Cobbleopolis",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node build/dev-runner.js",
    "build": "cross-env NODE_ENV=production npm run webpack:server:prod && npm run webpack:client:prod",
    "clean": "rimraf dist/**/* !dist/.gitkeep .tmp",
    "test": "cross-env NODE_ENV=testing BABEL_ENV=test npm run test:server && npm run test:client",
    "test:server": "cross-env NODE_ENV=testing BABEL_ENV=test mocha-webpack --webpack-config build/webpack.setver.test.js test/server/**/*.spec.js && rimraf .tmp",
    "test:client": "cross-env NODE_ENV=testing BABEL_ENV=test karma start test/client/karma.conf.js --single-run",
    "webpack:server:dev": "cross-env NODE_ENV=development node build/build-runner.js server",
    "webpack:server:prod": "cross-env NODE_ENV=production node build/build-runner.js server",
    "webpack:client:dev": "cross-env NODE_ENV=development node build/build-runner.js client",
    "webpack:client:prod": "cross-env NODE_ENV=production node build/build-runner.js client",
    "webpack:dev": "cross-env NODE_ENV=development node build/build-runner.js",
    "webpack:prod": "cross-env NODE_ENV=production node build/build-runner.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "@vue/compiler-sfc": "^3.1.4",
    "ajv": "^6.10.2",
    "bootstrap": "4.3.1",
    "bootstrap-vue": "^2.16.0",
    "cache-loader": "^4.1.0",
    "config": "^3.2.2",
    "css-loader": "^5.2.6",
    "express": "^4.17.1",
    "express-winston": "^3.3.0",
    "jquery": "^3.5.1",
    "less": "^3.9.0",
    "moment": "^2.24.0",
    "popper.js": "^1.15.0",
    "sass-loader": "^12.1.0",
    "socket.io": "^2.2.0",
    "source-map-support": "^0.5.13",
    "stylus": "^0.54.7",
    "vue": "^2.6.10",
    "vue-i18n": "^8.14.0",
    "vue-router": "^3.1.3",
    "vue-socket.io": "3.0.7",
    "vue-style-loader": "^4.1.2",
    "vuex": "^3.1.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
