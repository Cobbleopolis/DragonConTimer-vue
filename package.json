{
  "name": "dragoncon-timer",
  "displayName": "DragonCon Timer",
  "version": "1.0.0",
  "description": "Timing application for DragonCon LAN Gaming",
  "main": "index.js",
  "author": "Cobbleopolis",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node build/dev-runner.js",
    "build": "cross-env NODE_ENV=production npm run webpack:server:prod && npm run webpack:client:prod",
    "clean": "rimraf dist/**/* !dist/.gitkeep .tmp",
    "test": "cross-env NODE_ENV=testing BABEL_ENV=test npm run test:server && npm run test:client",
    "test:server": "cross-env NODE_ENV=testing BABEL_ENV=test mocha-webpack --webpack-config build/webpack.setver.test.js test/server/**/*.spec.js && rimraf .tmp",
    "test:client": "cross-env NODE_ENV=testing BABEL_ENV=test karma start test/client/karma.conf.js --single-run",
    "webpack:server:dev": "cross-env NODE_ENV=development webpack --progress --colors --config build/webpack.server.dev.js",
    "webpack:server:prod": "cross-env NODE_ENV=production webpack --progress --colors --config build/webpack.server.prod.js",
    "webpack:client:dev": "cross-env NODE_ENV=development webpack --progress --colors --config build/webpack.client.dev.js",
    "webpack:client:prod": "cross-env NODE_ENV=production webpack --progress --colors --config build/webpack.client.prod.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "ajv": "^6.5.3",
    "bootstrap": "4.1.3",
    "bootstrap-vue": "^2.0.0-rc.11",
    "config": "^2.0.1",
    "css-loader": "^1.0.0",
    "express": "^4.16.3",
    "express-winston": "^3.0.0",
    "jquery": "^3.3.1",
    "less": "^3.8.1",
    "node-sass": "^4.9.3",
    "popper.js": "^1.14.4",
    "sass-loader": "^7.1.0",
    "socket.io": "^2.1.1",
    "source-map-support": "^0.5.9",
    "stylus": "^0.54.5",
    "vue": "^2.5.17",
    "vue-i18n": "^8.1.0",
    "vue-loader": "^15.4.2",
    "vue-router": "^3.0.1",
    "vue-socket.io": "^2.1.1-b",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.17",
    "vuex": "^3.0.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-stage-0": "^7.0.0",
    "babel-loader": "^8.0.2",
    "babel-plugin-source-map-support": "^2.0.1",
    "chai": "^4.1.2",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "karma": "^3.0.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sinon-chai": "^2.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^3.0.4",
    "mocha": "^5.2.0",
    "mocha-webpack": "^1.1.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^6.2.0",
    "sinon-chai": "^3.2.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.18.0",
    "webpack-dev-middleware": "^3.3.0",
    "webpack-hot-middleware": "^2.23.1",
    "webpack-merge": "^4.1.4"
  }
}
